                                                <td>
                                                    <button class="btn btn-sm">
                                                        <span class="fa fa-2x fa-external-link"></span>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>65443</td>
                                                <td>01/15/2019</td>
                                                <td>$15,544.78</td>
                                                <td>$15,544.78</td>
                                                <td>
                                                    <button class="btn btn-sm">
                                                        <span class="fa fa-2x fa-external-link"></span>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>91432</td>
                                                <td>02/01/2019</td>
                                                <td>$15,468.78</td>
                                                <td>$15,468.78</td>
                                                <td>
                                                    <button class="btn btn-sm">
                                                        <span class="fa fa-2x fa-external-link"></span>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>333214</td>
                                                <td>02/15/2019</td>
                                                <td>$15,468.78</td>
                                                <td>$15,468.78</td>
                                                <td>
                                                    <button class="btn btn-sm">
                                                        <span class="fa fa-2x fa-external-link"></span>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </section>

</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/ar-payer.js"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.9.1/d3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.6.13/c3.min.js"></script>
    <script type="text/javascript">
        $(function () {
            arPayer.serverModel = @Html.Raw(JsonConvert.SerializeObject(Model));
            arPayer.init();            
        });
    </script>
}

