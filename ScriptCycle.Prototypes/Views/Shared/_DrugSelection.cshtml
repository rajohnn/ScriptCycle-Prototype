<div data-bind="with: DrugSelection">
    <section id="main-drug-selection" style="margin-top:-7px">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Type</label>
                    <select id="type" class="form-control form-control-sm text-primary"
                            data-bind="options: DrugOptions,
                                value: SelectedDrugType,
                                optionsText: 'Value',
                                optionsValue: 'Id'"></select>
                </div>
            </div>
            <div class="col-lg-8">
                <section id="drug-search" data-bind="if: SelectedDrugType() == 3 || SelectedDrugType() == 2">
                    <label>Drug ID</label>
                    <div class="input-group">
                        <input type="text" id="drugid" data-bind="textInput: DrugId" class="form-control form-control-sm"  />
                        <div class="input-group-append">
                            <button class="btn btn-sm btn-outline-primary" data-bind="click: drugsearch.onSearchClicked">
                                <span class="fa fa-search"></span>
                            </button>
                        </div>
                    </div>
                </section>
                <section id="formulary-selection" data-bind="if: SelectedDrugType() == 4">
                    <label>Formulary</label>
                    <select id="type" class="form-control form-control-sm text-primary"
                            data-bind="options: Formularies,
                                value: SelectedFormulary,
                                optionsText: 'Value',
                                optionsValue: 'Id'"></select>
                </section>
            </div>            
        </div>
        
        <section id="drug-panel" data-bind="slideVisible: ShowPanel">
            <div class="row" style="margin-top:7px">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Dosage Options</label>
                        <select class="form-control drug-listbox form-control-sm" size="6"
                                data-bind="options: DosageOptions, value: SelectedDosage"></select>
                    </div>                   
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Strengths</label>
                        <select class="form-control drug-listbox form-control-sm" size="6"
                                data-bind="options: Strengths, value: SelectedStrength"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group" style="margin-top:6px">
                        <label for="foobar">NDC</label>
                        <select id="foobar" class="form-control drug-listbox form-control-sm" size="5"
                                data-bind="options: NDCs, value: SelectedNDC">
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group" style="margin-top:6px">
                        <label for="foobar">GPI</label>
                        <select id="foobar" class="form-control drug-listbox form-control-sm" size="5"
                                data-bind="options: GPIs, value: SelectedGPI">                           
                        </select>
                    </div>

                </div>
            </div>
            <div class="alert alert-primary">
                <a href="#" class="small text-primary" style="margin-top:15px">
                    <span class="fa fa-external-link"></span> Pass to full drug search
                </a>
            </div>
            <div class="row">
                <div class="col-lg-12">                    
                    <button data-bind="click: drugsearch.onDrugSelectApply" style="margin-top:-5px" class="btn btn-sm btn-primary pull-right">Apply</button>
                </div>
            </div>
        </section>
       
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Display As (Description)</label>
                    <input type="text" data-bind="value: DisplayAs" id="drug-description" class="form-control form-control-sm" />
                </div>
            </div>
        </div>
    </section>
    
</div>


