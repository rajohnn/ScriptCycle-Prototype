<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ScriptCycle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/18.2.7/css/dx.common.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/18.2.7/css/dx.softblue.css" />
    @*<link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/18.2.7/css/dx.material.blue.dark.css" />*@
    <link href="https://fonts.googleapis.com/css?family=Merriweather|Montserrat" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.core.css" rel="stylesheet" type="text/css" />
</head>
<body class="dx-viewport">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="/Home">Prototypes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Views
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/AP">Accounts Payable - Dashboard</a>
                        <a class="dropdown-item" href="/AP/Details">Accounts Payable - Details</a>
                        <a class="dropdown-item" href="/AP/Process">Accounts Payable - Processing</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/AR">Accounts Receivable - Dashboard</a>
                        <a class="dropdown-item" href="/AR/TemplateLibrary">Accounts Receivable - Template Library</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Drugs">Drug Browser</a>
                        <a class="dropdown-item" href="/SharedControls/DrugSearch">Drug Search</a>
                        <a class="dropdown-item" href="/Members">Members</a>
                        <a class="dropdown-item" href="/StepTherapy">Step Therapy</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <span class="pull-right" style="padding-right:15px">&copy; @DateTime.Now.Year - ScriptCycle Prototypes</span>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.core.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.js"></script>
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/18.2.7/js/dx.all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>

    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/app.js"></script>

    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
</body>
</html>