@using Newtonsoft.Json
@{
    ViewBag.Title = "Step Therapy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link rel="stylesheet" href="~/Content/steptherapy.css" />
}

@Html.Partial("_ModalTier")
<section id="step-therapy-toolbar" class="row view-toolbar">
    <div class="col-lg-12">
        <span class="header">Step Therapy</span>
        <span id="function-panel" class="pull-right">
            <button type="button" class="btn btn-sm btn-default ">
                Create Program
            </button>           
        </span>
    </div>
</section>
<div class="row">
    <div class="col-lg-4">
        <div data-bind="foreach: ProgramColumn1">
            @Html.Partial("program_template")
        </div>
    </div>
    <div class="col-lg-4">
        <div data-bind="foreach: ProgramColumn2">
            @Html.Partial("program_template")
        </div>
    </div>
    <div class="col-lg-4">
        <div data-bind="foreach: ProgramColumn3">
            @Html.Partial("program_template")
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/d3/d3.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/StepTherapy.js"></script>
    <script type="text/javascript">

        $(function () {
            step.serverModel = @Html.Raw(JsonConvert.SerializeObject(Model));
            step.init();            

            $(".column-tiers").sortable({
                placeholder: "sortable-placeholder",
                over: function () {
                    $(".sortable-placeholder").stop().animate({
                        height: 0
                    }, 400);
                },
                change: function () {
                    $(".sortable-placeholder").stop().animate({
                        height: 100
                    }, 400);
                }
            });

        });
    </script>
}