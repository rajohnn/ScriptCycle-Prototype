<div class="modal right fade" id="modal-create-program" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-light">
            <div class="modal-header text-white tier-modal-header">
                <span class="modal-title" id="myModalLabel2" style="font-size:12pt">
                   Create Program
                </span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body tier-modal-body">              
                <label for="program-name">Program Name</label>
                <input type="text" class="form-control" id="program-name" data-bind="textInput: NewProgramName" />
            </div>
            <div class="modal-footer tier-footer">
                <span class="pull-right">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary" data-bind="click: step.onCreateProgram">Create Program</button>
                </span>
            </div>
        </div>
    </div>
</div>

